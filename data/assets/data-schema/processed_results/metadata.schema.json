{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Metadata",
  "type": "object",
  "properties": {
    "exposures": {
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "id": { "type": ["string", "number"] },
              "name": { "type": "string" },
              "trait": { "type": "string" },
              "category": { "type": "string" }
            },
            "required": ["category"],
            "additionalProperties": true
          }
        ]
      }
    },
    "outcomes": {
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "id": { "type": ["string", "number"] },
              "name": { "type": "string" },
              "trait": { "type": "string" },
              "category": { "type": "string" }
            },
            "required": ["category"],
            "additionalProperties": true
          }
        ]
      }
    },
    "methods": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "id": { "type": ["string", "number"] },
              "method": { "type": "string" },
              "name": { "type": "string" },
              "category": { "type": "string" },
              "description": { "type": "string" }
            },
            "additionalProperties": true
          },
          { "type": "array", "items": { "type": "string" } },
          { "type": "string" }
        ]
      }
    },
    "population": {
      "anyOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } },
        { "type": "array", "items": { "type": "object" } },
        {
          "type": "object",
          "properties": {
            "error": { "type": "string" },
            "explanation": { "type": "string" }
          },
          "additionalProperties": true
        }
      ]
    }
  },
  "required": [],
  "additionalProperties": false
}
